<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="230.0" prefWidth="650.0" spacing="8.0" style="-fx-opacity: 90%;" type="VBox" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="suspectNameLabel" styleClass="has-text" text="Label" />
      <TextArea fx:id="chatBox" editable="false" prefHeight="197.0" prefWidth="634.0" styleClass="has-text" wrapText="true" VBox.vgrow="ALWAYS" />
      <HBox prefHeight="50.0" prefWidth="200.0" spacing="16.0" VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="textInput" onKeyPressed="#onKeyPressed" prefHeight="26.0" prefWidth="280.0" promptText="Write your message here..." styleClass="has-text" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Pane fx:id="sendMessageButton" onMouseClicked="#handleSendMessageClicked" prefHeight="47.0" prefWidth="120.0">
               <children>
                  <Label fx:id="sendMessageLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="37.0" prefWidth="120.0" styleClass="has-text" text="Send message">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</fx:root>
